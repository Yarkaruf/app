{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "outDir": "build/dist",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": "./src",
    "jsx": "preserve"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "include": ["src"],
  "exclude": ["build", "public", ".next"]
}
